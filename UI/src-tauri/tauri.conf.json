{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "facewinunlock-tauri",
  "version": "0.2.1",
  "identifier": "com.administrator.facewinunlock-tauri",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "facewinunlock-tauri-吾爱破解首发",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' ipc: http://localhost:*;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "README.md": "README.md"
    },
    "windows": {
      "nsis": {
        "installMode": "perMachine"
      }
    }
  }
}
